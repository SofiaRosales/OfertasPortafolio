
@{
    ViewBag.Title = "Agregar producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

    <form>
        <fieldset>
            <legend>Agregar oferta</legend>
            
                <table style="width:80%">
                    <tr>
                        <td>
                            <div class="form-group">
                                <label>Categoría</label>
                                @Html.DropDownList("categoriaOferta", ViewBag.categoriaListName as SelectList, "Hola");
                            </div>
                            

                                <div class="form-group">
                                        <label>Imagen</label>
                                        <input class="form-control-file" name="foto_producto" type="file">
                                </div>
                        </td>
                        <td>
                            <div class="form-group">
                                <label accesskey="" style="text-align:left">Nombre </label>
                                <input class="form-control" name="nombre_prod" style="width:90%" placeholder="Nombre producto">
                            </div>
                            <div class="form-group">
                                <label accesskey="" style="text-align:left">Precio ($x.xxx)</label>
                                <input class="form-control" name="precio_prod" style="width:90%">
                            </div>
                            <div class="form-group">
                                <label>Descripción</label><br />
                                <textarea class="form-control" name="descripcion_prod" rows="3" style="width:90%"></textarea>
                            </div>
                        </td>   
                    </tr>

                    <td><button type="button" class="btn btn-success" style="width:150px" onclick="location.href='@Url.Action("Adm_empresas","Administrador")'">Cancelar</button></td>

                    <td><button type="submit" class="btn btn-primary" style="width:150px; float:right">Agregar</button></td>
                    
                   
                </table>


           

</fieldset>
    </form>

    