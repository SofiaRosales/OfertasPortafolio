@model IEnumerable<SolucionOfertas.Models.OFERTA>

@{
    ViewBag.Title = "Adm_oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<br />
<br />
<br />
<div>
    <h2>Administrar ofertas</h2>
    @Html.ActionLink("Agregar oferta", "ADD_oferta", "Enc_tienda")
    <br />
    <br />

    <center>

        <table style="width:100%">

            <tr class="table-active">

                <th>ID</th>

                <th>Nombre</th>

                <th>RUT</th>

                <th>Región</th>

                <th>Provincia</th>

                <th>Comuna</th>

                <th>Dirección</th>

                <th>Acción</th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ID</td>

                    <td>@item.nombre</td>

                    <td>50</td>

                    <td>Jill</td>

                    <td>Smith</td>

                    <td>50</td>

                    <td>Jill</td>

                    <td>@Html.ActionLink("Modificar", "UP_empresa", "Administrador") | @Html.ActionLink("Eliminar", "ADD_empresa", "Administrador")</td>

                </tr>
            ]

        </table>


    </center>


</div>



