@model IEnumerable<SolucionOfertas.Models.PRODUCTO>
@{
    ViewBag.Title = "Home Page";
}
<br />
<br />
<br />
<br />
<div class="row">
    
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-3">

                    <h3 class="card-header">
                        <label style="height:60px">@item.NOMBRE</label>
                    </h3>

                    <img style="height: 200px; width: 100%;" src="~/Imagenes/@item.IMAGEN" alt="Card image">

                    <div class="card-body">
                        <p class="card-text" style="height:100px">@item.DESCRIPCION</p>
                    </div>

                    @*<div class="card-footer text-muted">
                            2 days ago
                        </div>*@

                </div>


            </div>
        }


</div>
